<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_apply_reboot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apply_reboot" />

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:id="@+id/tab6"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dip">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <LinearLayout
                                android:id="@+id/ip_fields"
                                style="@style/ethernet_item"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="visible">

                                <TextView
                                    style="@style/ethernet_item_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/ethernet_ip_settings" />

                                <Spinner
                                    android:id="@+id/ip_settings"
                                    style="@style/ethernet_item_spinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:entries="@array/ethernet_ip_settings"
                                    android:prompt="@string/ethernet_ip_settings" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/staticip"
                                style="@style/ethernet_section"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="visible">

                                <LinearLayout
                                    style="@style/ethernet_item"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        style="@style/ethernet_item_label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/ethernet_ip_address" />

                                    <EditText
                                        android:id="@+id/ipaddress"
                                        style="@style/ethernet_item_edit_content"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/ethernet_ip_address_hint"
                                        android:inputType="phone"
                                        android:singleLine="true" />
                                </LinearLayout>

                                <LinearLayout
                                    style="@style/ethernet_item"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        style="@style/ethernet_item_label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/ethernet_gateway" />

                                    <EditText
                                        android:id="@+id/gateway"
                                        style="@style/ethernet_item_edit_content"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/ethernet_gateway_hint"
                                        android:inputType="phone"
                                        android:singleLine="true" />
                                </LinearLayout>

                                <LinearLayout
                                    style="@style/ethernet_item"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        style="@style/ethernet_item_label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/ethernet_network_prefix_length" />

                                    <EditText
                                        android:id="@+id/network_prefix_length"
                                        style="@style/ethernet_item_edit_content"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/ethernet_network_prefix_length_hint"
                                        android:inputType="number"
                                        android:singleLine="true" />
                                </LinearLayout>

                                <LinearLayout
                                    style="@style/ethernet_item"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        style="@style/ethernet_item_label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/ethernet_dns1" />

                                    <EditText
                                        android:id="@+id/dns1"
                                        style="@style/ethernet_item_edit_content"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/ethernet_dns1_hint"
                                        android:inputType="phone"
                                        android:singleLine="true" />
                                </LinearLayout>

                                <LinearLayout
                                    style="@style/ethernet_item"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        style="@style/ethernet_item_label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/ethernet_dns2" />

                                    <EditText
                                        android:id="@+id/dns2"
                                        style="@style/ethernet_item_edit_content"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/ethernet_dns2_hint"
                                        android:inputType="phone"
                                        android:singleLine="true" />
                                </LinearLayout>
                            </LinearLayout>
                            <Button
                                android:id="@+id/button_ethernet_apply"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/apply" />
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <Switch
                                android:id="@+id/switch_bt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="22dp"
                                android:text="@string/enable_bluetooth"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <Switch
                                android:id="@+id/switch_bt_sink"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="22dp"
                                android:text="@string/enable_bluetooth_sink_profile"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <Switch
                                android:id="@+id/switch_shut"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="22dp"
                                android:text="@string/force_shutdown_without_dialog"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <Switch
                                android:id="@+id/switch_hdmi_aud"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="22dp"
                                android:text="@string/force_hdmi_audio_output"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <Switch
                                android:id="@+id/switch_hdmi_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="22dp"
                                android:text="@string/hdmi_cec_switch_tv_input_after_bootup"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <Switch
                                android:id="@+id/switch_adb_on"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="22dp"
                                android:text="@string/enable_adb_ower_network_at_boot"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <Switch
                                android:id="@+id/switch_wlan_no_ps"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="22dp"
                                android:text="@string/disable_wlan_ps"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <Switch
                                android:id="@+id/switch_no_usb_perms"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="22dp"
                                android:text="@string/disable_usb_perms"
                                android:textAppearance="?android:attr/textAppearanceMedium" />
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shortcut_f7"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <Spinner
                        android:id="@+id/shortcut_f7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shortcut_f8"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <Spinner
                        android:id="@+id/shortcut_f8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shortcut_f9"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <Spinner
                        android:id="@+id/shortcut_f9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shortcut_f10"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <Spinner
                        android:id="@+id/shortcut_f10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fan_mode" />

                        <ToggleButton
                            android:id="@+id/btn_fan_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/auto"
                            android:textOff="@string/manual"
                            android:textOn="@string/auto" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fan_speed" />

                        <EditText
                            android:id="@+id/et_speed1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:width="50dp"
                            android:autoText="false"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="numberSigned"
                            android:numeric="integer|signed|decimal" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/percent" />

                        <EditText
                            android:id="@+id/et_speed2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:width="50dp"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="numberSigned"
                            android:numeric="integer|signed|decimal" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/percent" />

                        <EditText
                            android:id="@+id/et_speed3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:width="50dp"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="numberSigned"
                            android:numeric="integer|signed|decimal" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/percent" />

                        <EditText
                            android:id="@+id/et_speed4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:width="50dp"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="numberSigned"
                            android:numeric="integer|signed|decimal" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/percent" />

                        <Button
                            android:id="@+id/btn_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="@string/apply" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pwm_duty" />

                        <Button
                            android:id="@+id/btn_get_pwm_duty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/get_pwm_duty" />

                        <EditText
                            android:id="@+id/et_pwm_duty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:width="70dp"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="numberSigned"
                            android:numeric="integer|signed|decimal" />

                        <Button
                            android:id="@+id/btn_pwm_duty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="@string/apply" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pwm_enable" />

                        <ToggleButton
                            android:id="@+id/btn_pwm_enable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/on"
                            android:textOff="@string/off"
                            android:textOn="@string/on" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/temp_levels" />

                        <EditText
                            android:id="@+id/et_temp1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:width="50dp"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="numberSigned"
                            android:numeric="integer|signed|decimal" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/celsius" />

                        <EditText
                            android:id="@+id/et_temp2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:width="50dp"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="numberSigned"
                            android:numeric="integer|signed|decimal" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/celsius" />

                        <EditText
                            android:id="@+id/et_temp3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:width="50dp"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="numberSigned"
                            android:numeric="integer|signed|decimal" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/celsius" />

                        <Button
                            android:id="@+id/btn_temp_levels"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="@string/apply" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <RadioGroup
                        android:id="@+id/radioGroup2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <RadioButton
                            android:id="@+id/radio_0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/degree_0" />

                        <RadioButton
                            android:id="@+id/radio_90"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/degree_90" />

                        <RadioButton
                            android:id="@+id/radio_180"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/degree_180" />

                        <RadioButton
                            android:id="@+id/radio_270"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/degree_270" />
                    </RadioGroup>

                    <Button
                        android:id="@+id/button_rotation_apply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/apply" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <Spinner
                        android:id="@+id/spinner_resolution"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/radioGroup_mouse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp">

                        <RadioButton
                            android:id="@+id/radio_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/left_handed" />

                        <RadioButton
                            android:id="@+id/radio_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/right_handed" />
                    </RadioGroup>

                    <Button
                        android:id="@+id/button_mouse_apply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/apply" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/cpu_governor"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <Spinner
                        android:id="@+id/spinner_governors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/dram_governor"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <Spinner
                        android:id="@+id/spinner_dram_governors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/dram_max_freq"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <Spinner
                        android:id="@+id/spinner_dram_freq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </TabHost>

</RelativeLayout>
